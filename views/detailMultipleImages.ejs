<!doctype html>
<html lang="es">
<%- include('./partials/head') %>

  <body class="home">
    <%- include('./partials/header') %>
      <main >
        <section class="row mt-5">
          <article class="col-12 col-md-8 mx-auto">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-5">
                    <img src="/images/<%= images.length ? images[0] : 'default-placeholder.png'%>"
                      class="img-fluid rounded-start" alt="..." id="imgMain">
                    <div class="d-flex justify-content-between mt-2">
                      <% images.forEach(image=> { %>
                          <img src="/images/<%= image %>" width="30%"
                          class="img-fluid" alt="..." onclick="document.getElementById('imgMain').setAttribute('src',event.target.src)" style="cursor: pointer;">
                    
                        <% }) %>
                    </div>
                  </div>
                  <div class="col-7">
                    <h5 class="card-title">
                      <%= name %>
                    </h5>
                    <hr>
                    <p class="card-text">
                      <%= description %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </article>
        </section>
      </main>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
          crossorigin="anonymous"></script>
  </body>

</html>